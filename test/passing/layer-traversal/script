mkdir app
mkdir platform

cd platform
fury layer init --bare
fury project add -n scala
fury module add -n compiler -t compiler -C scala-lang.org:scala-compiler:2.12.8
fury binary add -b org.scala-lang:scala-compiler:2.12.8
fury project add -n library
fury module add -n core -c scala/compiler
fury build run --output linear
echo $?
IPFSREF=$(fury layer share --raw)
echo IPFS ref: $IPFSREF

cd ../app
fury layer init --bare
fury import add -l $IPFSREF --name platform
IPFSREF=
fury import list --raw
grep path .fury/config
fury layer select -l platform
grep path .fury/config
fury layer select -l ..
grep path .fury/config
fury layer select -l ..
echo $?
grep path .fury/config
fury layer select -l /platform
grep path .fury/config
fury layer select -l /..
echo $?
grep path .fury/config
fury layer select -l /platform/../..
echo $?
grep path .fury/config
fury layer select -l /platform/..
grep path .fury/config

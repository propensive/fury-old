#!/bin/sh

FURYHOME=$(dirname "$0")/..

PORT="8462"
CLASSPATH="$FURYHOME/lib/*"
MAIN="com.facebook.nailgun.NGServer"

nailgun(){
  "${FURYHOME}"/bin/ng --nailgun-port "$PORT" "$@"
}

stopFury(){
  nailgun ng-stop > /dev/null 2>&1 && printf 'Fury daemon has shut down.\n'
}

fury(){
  nailgun "fury.Main" -- "$@"
}

isRunning(){
  fury help > /dev/null 2> /dev/null
}

startFury() {
  isRunning && printf "Fury daemon is running\n" && exit 0

  SCALA=$(coursier fetch --classpath org.scala-lang:scala-reflect:2.12.8 com.facebook:nailgun-server:1.0.0)
  nohup java -cp "$SCALA:$CLASSPATH" "$MAIN" "$PORT" > /dev/null 2>&1 &

  printf 'Fury daemon is starting...'
  for I in $(seq 1 25); do
    isRunning && printf "\nFury daemon is running\n" && exit 0

    printf '.'
    sleep 0.15
  done
  printf '\n'
  printf 'Starting Fury is taking longer than expected.\n'
}

startFuryStandalone() {
  SCALA=$(coursier fetch --classpath org.scala-lang:scala-reflect:2.12.8 com.facebook:nailgun-server:1.0.0)
  java -cp "$SCALA:$CLASSPATH" "$MAIN" "$PORT"
}

case "$1" in
  "start")
    startFury
    ;;
  "standalone")
    startFuryStandalone
    ;;
  "stop")
    stopFury
    ;;
  "restart")
    stopFury && startFury && printf 'Fury daemon has been restarted.\n'
    ;;
  "prompt")
    fury "$@"  || printf " %{\e[0;30m%}[ ]"
    ;;
  "completion")
    fury "$@"  || printf "1:Command:((start:'start the Fury daemon'))\n"
    ;;
  *)
    fury "$@"
    ;;
esac

